<h1>All Tasks</h1>
<ul class="list-unstyled">
  <% @tasks.each do |task| %>
    <li class="container">
      <div class="row justify-content-md">
      <div class="col col-lg-1">
          <%= link_to task_path(task), data: {turbo_method: :delete, turbo_confirm: "Are you sure?"} do %>
            <i class="fa-solid fa-trash-can"></i>
          <% end %>
       </div>
        <div class="col col-lg-2">
          <p class="p-2"><%= link_to task.title, task_path(task), class:'text-decoration-none'%></p>
        </div>
        <div class="col col-lg-2">
          <p class="p-2"><%= task.details %></p>
        </div>
        <div class="col col-lg-2">
        <% if task.completed %>
          <%# <p class="p-2"><%= task.completed %>
          <input type="checkbox" checked>
        <% else %>
          <input type="checkbox">
        <% end %>
        </div>
        </li>
      </div>
    <% end %>

  <%= link_to "Add a task", tasks_new_path(@task) %>
</ul>
